    <div class="d-flex">
        <button class="toggle-btn" type="button" id="toggleSidebarBtn">
            <i class="lni lni-menu"></i>                
        </button>
        <div class="sidebar-logo">
            <a href="#" id="adminLogo">Simula</a>
        </div>
    </div>

    <ul class="sidebar-nav" id="adminSidebarNav">
        <li class="sidebar-item" id="adminExamenes">
